<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:orientation="vertical"
    android:paddingLeft="28dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/detail_itemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:text="배추"
            android:textSize="16.25dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/detail_average_photo"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/priceinfo"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fefefefe"/>

            <RelativeLayout
                android:id="@+id/fefefefe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/detail_itemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="15,500"
                    android:textSize="16.25dp" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/detail_itemCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:gravity="center"
            android:textSize="16.25dp" />

        <TextView
            android:id="@+id/detail_itemPriceAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="15,500"
            android:gravity="center"
            android:textSize="16.25dp" />
    </LinearLayout>

</RelativeLayout>